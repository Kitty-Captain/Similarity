{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "jsx": "react",
      "moduleResolution": "node",
      "strict": true,
      "noEmit": true,
      "allowJs": true,
      "skipLibCheck": true,
      "isolatedModules": true,
      "esModuleInterop": true
    },
    "include": ["src"],
    "ts-node": {
      "files": true,
      "transpileOnly": true,
    }
}